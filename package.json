{
  "name": "vim-candle",
  "version": "2.0.0",
  "description": "This plugin created to learn golang.",
  "scripts": {
    "watch": "chokidar '**/*.go' -c 'npm run build'",
    "build": "cd ./go/candle-server && go build -ldflags '-s -w' && mkdir -p ../../bin/candle-server/ && mv ./candle-server ../../bin/candle-server/candle-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrsh7th/vim-candle.git"
  },
  "author": "hrsh7th",
  "license": "ISC",
  "homepage": "https://github.com/hrsh7th/vim-candle",
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "husky": "^4.0.6"
  }
}
